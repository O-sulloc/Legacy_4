<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jh.s1.notice.NoticeDAO">
	<update id="update" parameterType="NoticeDTO">
		update notice set title=#{title}, contents=#{contents}
		where num=#{num}
	</update>

	<select id="list" resultType="NoticeDTO">
		SELECT * FROM notice
	</select>

	<insert id="add" parameterType="NoticeDTO">
		INSERT INTO NOTICE (NUM, TITLE, CONTENTS, WRITER, REGDATE, HIT)
		VALUES (NOTICE_SEQ.NEXTVAL, #{title}, #{contents}, #{writer}, SYSDATE,
		#{hit})
	</insert>

	<select id="detail" resultType="NoticeDTO"
		parameterType="NoticeDTO">
		select * from notice where num=#{num}
	</select>

	<delete id="delete" parameterType="NoticeDTO">
		delete from notice where num = #{num}
	</delete>
</mapper>