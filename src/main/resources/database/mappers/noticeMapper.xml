<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
    <mapper namespace="com.jh.s1.notice.NoticeDAO">
    	<select id="list" resultType="com.jh.s1.notice.NoticeDTO">
    		SELECT * FROM notice
    	</select>
    
    	<insert id="add" parameterType="com.jh.s1.notice.NoticeDTO">
    		INSERT INTO NOTICE (NUM, TITLE, CONTENTS, WRITER, REGDATE, HIT)
			VALUES (NOTICE_SEQ.NEXTVAL, #{title}, #{contents}, #{writer}, SYSDATE, #{hit})
    	</insert>
    	
    	<select id="detail" resultType="com.jh.s1.notice.NoticeDTO" parameterType="com.jh.s1.notice.NoticeDTO">
    		select * from notice where num=#{num}
    	</select>
    	
    	<delete id="delete" parameterType="com.jh.s1.notice.NoticeDTO">
    		delete from notice where num = #{num}
    	</delete>
    </mapper>